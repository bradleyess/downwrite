{
  "name": "redownwrite",
  "version": "0.1.0",
  "private": true,
  "repository": "charlespeters/downwrite",
  "author": "Charles âš¡ <charlespeters42@gmail.com>",
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "test": "NODE_ENV=test jest --env=jsdom --verbose --silent",
    "lint": "yarn eslint ./src/**/*.js",
    "format": "prettier --write 'src/**/*.js' --parser flow",
    "deploy": "now && now alias"
  },
  "engines": {
    "node": "~10.4.1"
  },
  "dependencies": {
    "@charliewilco/sanitize-object": "^1.0.0",
    "@zeit/next-css": "^0.2.0",
    "babel-plugin-styled-components": "^1.5.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "date-fns": "^1.29.0",
    "draft-js": "^0.10.4",
    "draft-js-markdown-plugin": "^2.0.0",
    "draft-js-plugins-editor": "^2.0.8",
    "draft-js-prism-plugin": "^0.1.3",
    "express": "^4.16.3",
    "file-saver": "^1.3.4",
    "front-matter": "^2.3.0",
    "immutable": "^3.8.2",
    "jsonwebtoken": "^8.3.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.10",
    "markdown-draft-js": "^1.0.1",
    "next": "^6.0.3",
    "next-manifest": "^1.5.0",
    "next-offline": "^2.7.2",
    "prismjs": "^1.14.0",
    "rcolor": "^1.0.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-dropzone": "^4.2.9",
    "react-markdown": "^3.3.2",
    "react-media": "^1.8.0",
    "react-prism": "^4.3.1",
    "styled-components": "^3.3.0",
    "sw-precache-webpack-plugin": "^0.11.5",
    "universal-cookie": "^2.1.0",
    "universal-cookie-express": "^2.1.2",
    "universal-fetch": "^1.0.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^23.0.1",
    "dom-testing-library": "^2.2.0",
    "fbjs": "^0.8.16",
    "jest": "^23.1.0",
    "jest-fetch-mock": "^1.4.1",
    "jest-styled-components": "^5.0.1",
    "micro-proxy": "^1.1.0",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.4.0",
    "react-testing-library": "^3.0.2"
  },
  "babel": {
    "presets": ["next/babel"],
    "env": {
      "development": {
        "plugins": [
          "transform-flow-strip-types",
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true,
              "preprocess": false
            }
          ]
        ]
      },
      "test": {
        "presets": [
          [
            "next/babel",
            {
              "preset-env": {
                "modules": "commonjs"
              }
            }
          ]
        ],
        "plugins": [
          "transform-flow-strip-types",
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": true,
              "preprocess": false
            }
          ]
        ]
      },
      "production": {
        "presets": ["next/babel"],
        "plugins": [
          "transform-flow-strip-types",
          [
            "styled-components",
            {
              "ssr": true,
              "displayName": false,
              "preprocess": false
            }
          ]
        ]
      }
    }
  },
  "jest": {
    "collectCoverageFrom": ["/**/*.{js,jsx,mjs}"],
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/config/setupTests.js",
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/",
      "<rootDir>/__tests__/config/"
    ],
    "testMatch": [
      "<rootDir>/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)":
        "<rootDir>/__tests__/config/fileTransform.js"
    },
    "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"],
    "moduleFileExtensions": ["web.js", "mjs", "js", "json", "web.jsx", "jsx", "node"]
  },
  "eslintIgnore": ["/src/__tests__/*.test.js"],
  "now": {
    "name": "next-downwrite",
    "alias": ["beta.downwrite.us"],
    "env": {
      "NODE_ENV": "production",
      "SECRET_KEY": "@dw-key"
    },
    "scale": {
      "sfo1": {
        "min": 1,
        "max": 5
      }
    }
  },
  "browserslist": [">0.25%", "not ie 11", "not op_mini all"]
}
