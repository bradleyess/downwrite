{
  "name": "api",
  "description": "REST API for downwrite",
  "version": "0.0.0",
  "main": "server.js",
  "private": true,
  "scripts": {
    "build": "tsc",
    "predev": "yarn build",
    "deploy": "now && now alias",
    "start": "node dist/server.js",
    "dev": "node dist/server.js",
    "test": "jest"
  },
  "license": "MIT",
  "dependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/boom": "^7.2.0",
    "@types/hapi": "^17.0.19",
    "@types/joi": "^13.4.5",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mongoose": "^5.2.13",
    "@types/node": "^10.9.4",
    "@types/uuid": "^3.4.4",
    "bcrypt": "^2.0.1",
    "boom": "^5.2.0",
    "good": "^7.2.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.5.0",
    "hapi-auth-jwt": "^4.0.0",
    "joi": "^10.6.0",
    "jsonwebtoken": "^8.3.0",
    "markdown-draft-js": "^1.0.1",
    "mongoose": "^4.11.11",
    "typescript": "^3.0.3",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-jest": "^22.4.0",
    "jest": "^22.4.0"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "src/*"
    ],
    "verbose": true,
    "delay": "2500"
  },
  "now": {
    "name": "api-downwrite",
    "alias": "api.downwrite.us",
    "scale": {
      "sfo1": {
        "min": 1,
        "max": 2
      }
    },
    "env": {
      "NODE_ENV": "production",
      "SECRET_KEY": "@dw-key",
      "DB_USER": "@dw-db-user",
      "DB_PASSWORD": "@dw-db-password",
      "DB_ADDRESS": "@dw-db-address"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "repository": "charlespeters/downwrite",
  "author": "Charles âš¡ <charlespeters42@gmail.com>"
}
