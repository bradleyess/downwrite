{
	"private": true,
	"name": "downwrite",
	"workspaces": [
		"app/api",
		"app/client",
		"app/export-json",
		"app/export-md"
	],
	"prettier": {
		"printWidth": 95,
		"parser": "flow",
		"semi": false,
		"singleQuote": true,
		"useTabs": true,
		"bracketSpacing": true,
		"jsxBracketSameLine": true
	},
	"scripts": {
		"precommit": "lint-staged",
		"dev": "bolt ws run dev",
		"build": "bolt ws run build"
	},
	"lint-staged": {
		"*.js": [
			"prettier --parser flow --write",
			"git add"
		],
		"*.css": [ "prettier --parser postcss --write",
			"git add"
		]
	},
	"bolt": {
		"workspaces": [
			"app/*"
		]
	},
	"devDependencies": {
		"bolt": "^0.18.3",
		"husky": "^0.14.3",
		"lint-staged": "^6.0.0",
		"prettier": "^1.10.2"
	},
	"version": "1.0.0",
	"description": "A place to write",
	"author": "Charles âš¡ <charlespeters42@gmail.com>",
	"license": "MIT"
}
