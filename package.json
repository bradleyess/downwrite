{
	"private": true,
	"name": "downwrite",
	"description": "A place to write",
	"author": "Charles âš¡ <charlespeters42@gmail.com>",
	"repository": "charlespeters/downwrite",
	"scripts": {
		"precommit": "lint-staged",
		"analysis": "glow redownwrite/**/*",
		"dev": "bolt ws dev",
		"build": "bolt ws build",
		"go": "bolt ws deploy",
		"test": "bolt ws test",
		"clean": "bolt ws exec -- 'rm -rf node_modules'"
	},
	"devDependencies": {
		"bolt": "^0.20.5",
		"flow-bin": "^0.70.0",
		"glow": "^1.2.2",
		"husky": "^0.14.3",
		"lint-staged": "^7.0.4",
		"prettier": "^1.11.1"
	},
	"prettier": {
		"printWidth": 95,
		"parser": "flow",
		"semi": false,
		"singleQuote": true,
		"tabWidth": 2,
		"useTabs": false,
		"bracketSpacing": true,
		"jsxBracketSameLine": true
	},
	"lint-staged": {
		"*.js": [
			"prettier --parser flow --write",
			"git add"
		],
		"*.css": [
			"prettier --parser postcss --write",
			"git add"
		]
	},
	"bolt": {
		"workspaces": [
			"redownwrite",
			"api-downwrite",
			"graph-downwrite",
			"union"
		]
	},
	"workspaces": [
		"redownwrite",
		"union",
		"api-downwrite",
		"graph-downwrite"
	],
	"license": "MIT"
}
