{
  "name": "api-downwrite",
  "description": "REST API for downwrite",
  "version": "0.0.0",
  "main": "server.js",
  "private": true,
  "scripts": {
    "build": "babel src --out-dir dist",
    "predev": "yarn build",
    "deploy": "now && now alias",
    "start": "node dist/server.js",
    "dev": "concurrently -c 'blue,yellow' --names 'Babel,Server' 'yarn build -w' 'node dist/server.js'",
    "test": "jest"
  },
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "bcrypt": "^2.0.1",
    "boom": "^5.2.0",
    "good": "^7.2.0",
    "good-console": "^6.4.0",
    "good-squeeze": "^5.0.2",
    "hapi": "^16.5.0",
    "hapi-auth-jwt": "^4.0.0",
    "joi": "^10.6.0",
    "jsonwebtoken": "^8.3.0",
    "markdown-draft-js": "^1.0.1",
    "mongoose": "^4.11.11",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-jest": "^22.4.0",
    "concurrently": "^3.5.0",
    "jest": "^22.4.0"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "src/*"
    ],
    "verbose": true,
    "delay": "2500"
  },
  "now": {
    "alias": "api.downwrite.us",
    "env": {
      "NODE_ENV": "production",
      "SECRET_KEY": "@dw-key"
    },
    "dotenv": ".env.production"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "repository": "charlespeters/downwrite",
  "author": "Charles âš¡ <charlespeters42@gmail.com>"
}
